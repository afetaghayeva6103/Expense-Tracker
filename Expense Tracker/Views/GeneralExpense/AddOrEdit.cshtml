@model Expense_Tracker.Models.GeneralExpenseDto

@{
    ViewData["PageTitle"] = Model.Id == 0 ? "Create a new expense" : "Edit expense";
}

<div class="row">
    <div class="col-md-12">
        <div class="widget p-5" style="background-color:#212b36">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="mb-3">
                    <ejs-dropdownlist id="currency" ejs-for="Currency" placeholder="Select Currency" floatLabelType="Always" dataSource="@ViewBag.CurrencyList">
                        <e-dropdownlist-fields text="Text" value="Value"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                    <span asp-validation-for="Currency" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <ejs-dropdownlist id="expenseType" ejs-for="ExpenseType" placeholder="Select Expense Type" floatLabelType="Always" dataSource="@ViewBag.ExpenseTypes">
                        <e-dropdownlist-fields text="Text" value="Value"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                    <span asp-validation-for="ExpenseType" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <ejs-datepicker id="expenseDate" ejs-for="ExpenseDate" placeholder="Expense Date" floatLabelType="Always"
                                    format="MMM-dd-yyyy"></ejs-datepicker>
                </div>
                <div class="mb-3">
                    <ejs-numerictextbox id="amount" placeholder="Amount" ejs-for="Amount" step="1" format="n0" floatLabelType="Always"></ejs-numerictextbox>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <ejs-button id="submit" typeof="submit" content="Submit" cssClass="e-success"></ejs-button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}