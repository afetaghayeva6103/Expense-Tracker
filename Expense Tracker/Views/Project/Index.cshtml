@model IEnumerable<Expense_Tracker.Models.ProjectDto>

@{
    ViewData["PageTitle"] = "Project";
    ViewData["PageActionText"] = "+ New Project";
    ViewData["PageActionUrl"] = "/Project/AddOrEdit";
}

<div class="row">
    <div class="col-md-7">
        <ejs-grid id="projects" dataSource="@Model" gridLines="None" allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Start Date" field="StartDate" width="110px" type="startDate" format="MMM-dd-yy"
                               textAlign="Right"></e-grid-column>
                <e-grid-column headerText="End Date" field="EndDate" width="110px" type="endDate" format="MMM-dd-yy"
                               textAlign="Right"></e-grid-column>
                <e-grid-column headerText="Title" field="Title" width="110px" textAlign="Right"></e-grid-column>
                <e-grid-column headerText="Description" field="Description" width="110px" textAlign="Right"></e-grid-column>
                <e-grid-column headerText="Actions" template="#actionColumnTemplate" width="100px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color:#212b36">
            <i class="fa-solid fa-money-bill-transfer fa-2xl"></i>
        </div>
    </div>
</div>

<script id="actionColumnTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm no-a-decoration" href="/Project/AddOrEdit/${Id}">
            <i class="fa-solid fa-pen fa-lg"></i>
        </a>
        <form action="/Project/Delete/${Id}" method="post">
    @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration" onclick="return confirm(&quot;Are you sure to delete this record?&quot;)">
                <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
            </button>
        </form>
    </div>
</script>