@model Expense_Tracker.Models.ProjectDto

@{
    ViewData["PageTitle"] = Model.Id == 0 ? "Create a new project" : "Edit project";
}

<div class="row">
    <div class="col-md-12">
        <div class="widget p-5" style="background-color:#212b36">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <ejs-dropdownlist id="currency" ejs-for="TargetCurrency" placeholder="Select Currency" floatLabelType="Always" dataSource="@ViewBag.CurrencyList">
                                <e-dropdownlist-fields text="Text" value="Value"></e-dropdownlist-fields>
                            </ejs-dropdownlist>
                            <span asp-validation-for="TargetCurrency" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <ejs-textbox id="title" placeholder="Title" ejs-for="Title" floatLabelType="Always" multiline="true"></ejs-textbox>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <ejs-textbox id="description" placeholder="Description" ejs-for="Description" floatLabelType="Always" multiline="true"></ejs-textbox>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <ejs-textbox id="note" placeholder="Note" ejs-for="Note" floatLabelType="Always" multiline="true"></ejs-textbox>
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <ejs-datepicker id="startDate" ejs-for="StartDate" placeholder="Start Date" floatLabelType="Always"
                                            format="MMM-dd-yyyy"></ejs-datepicker>
                        </div>
                        <div class="mb-3">
                            <ejs-datepicker id="endDate" ejs-for="EndDate" placeholder="End Date" floatLabelType="Always"
                                            format="MMM-dd-yyyy"></ejs-datepicker>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <ejs-dropdownlist id="invoiceCurrency" ejs-for="InvoiceTargetCurrency" placeholder="Select Invoice Currency" floatLabelType="Always" dataSource="@ViewBag.CurrencyList">
                                <e-dropdownlist-fields text="Text" value="Value"></e-dropdownlist-fields>
                            </ejs-dropdownlist>
                            <span asp-validation-for="InvoiceTargetCurrency" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <ejs-textbox id="invoiceNumber" placeholder="Invoice Number" ejs-for="InvoiceNumber" floatLabelType="Always" multiline="true"></ejs-textbox>
                            <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <ejs-textbox id="invoiceDocUrl" placeholder="Invoice Document Url" ejs-for="InvoiceDocUrl" floatLabelType="Always" multiline="true"></ejs-textbox>
                            <span asp-validation-for="InvoiceDocUrl" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <ejs-numerictextbox id="invoiceAmount" placeholder="Invoice Amount" ejs-for="InvoiceAmount" step="1" format="n0" floatLabelType="Always"></ejs-numerictextbox>
                            <span asp-validation-for="InvoiceAmount" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <ejs-datepicker id="invoiceIssueDate" ejs-for="InvoiceIssueDate" placeholder="Invoice Issue Date" floatLabelType="Always"
                                            format="MMM-dd-yyyy"></ejs-datepicker>
                        </div>
                        <div class="mb-3">
                            <ejs-button id="submit" typeof="submit" content="Submit" cssClass="e-success"></ejs-button>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-success" href="/Payment/AddOrEdit">
        New Payment
    </a>
</div>
<span class='fa-solid fa-angle-right'></span>

<div class="row">
    <div class="col-md-12">
        <ejs-grid id="payments" dataSource="@Model.Payments" gridLines="None" allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Payment Date" field="PaymentDate" width="110px" type="paymentDate" format="MMM-dd-yy"
                               textAlign="Right"></e-grid-column>
                <e-grid-column headerText="Category" field="CategoryName" width="110px" textAlign="Right"></e-grid-column>
                <e-grid-column headerText="Amount" field="Amount" width="110px" textAlign="Right"></e-grid-column>
                <e-grid-column headerText="Actions" template="#actionColumnTemplate" width="100px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
</div>

<script id="actionColumnTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm no-a-decoration" href="/Payment/AddOrEdit/${Id}">
            <i class="fa-solid fa-pen fa-lg"></i>
        </a>
        <a class="btn btn-sm no-a-decoration btn-info" href="/Payment/Look/${Id}">
            <i class="fa-solid fa-eye fa-lg"></i>
         </a>
        <form action="/Payment/Delete/${Id}" method="post">
    @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration" onclick="return confirm(&quot;Are you sure to delete this record?&quot;)">
                <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
            </button>
        </form>
    </div>
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
